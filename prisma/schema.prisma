// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CardTypes {
  Debit
  Credit
  Debit_and_Credit
}

model Users {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  wifiCredentials WifiCredentials[]
  onlineCredentials OnlineCredentials[]
  cardCredentials CardCredentials[]
}

model WifiCredentials {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [userId], references: [id])
  userId Int
  title String
  wifiName String
  password String
}

model OnlineCredentials {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [userId], references: [id])
  userId Int
  title String
  URL String
  username String
  password String
}

model CardCredentials {
  id Int @id @default(autoincrement())
  user Users @relation(fields: [userId], references: [id])
  userId Int
  title String
  cardName String
  expirationDate String
  isVirtual Boolean
  type CardTypes
  cardNumber String
  CVV String
  password String
}